<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <span class="nav-link"><%= link_to 'Welcome', root_path %></span>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <span class="nav-link"><%= link_to 'Home', root_path %></span>
      </li>
      <li class="nav-item">
        <span class="nav-link"><%= link_to 'Articles', articles_path %></span>
      </li>
    </ul>
    <ul class="navbar-nav ml-auto">
      <% if logged_in? %>
          <li class="nav-item active">
            <span class="nav-link"><strong><%= current_user.username %></strong></span>
          </li>
          <li class="nav-item active">
            <span class="nav-link">
                <%= link_to 'Logout', logout_path, method: :delete%>
            </span>
          </li>
      <%else%>
          <li class="nav-item active">
            <span class="nav-link"><%= link_to "Login", '/login', method: :get %></span>
          </li>
          <li class="nav-item">
            <span class="nav-link"><%= link_to "Sign Up", new_user_path, method: :get %></span>
          </li>
      <%end%>
    </ul>


  </div>
</nav>

<div class="container">
    <%= yield %>
</div>    
  </body>
</html>
